         <h2>Add a review:</h2>
         <form method="post" action="/reviews/submit">
            <div class="form-group">
               <!-- <label for="title">New review</label> -->
               <input name="reviewTitle" type="text" class="form-control" id="reviewTitle" placeholder="Review title">
            </div>

            <div class="form-group">
               <!-- <label for="exampleFormControlTextarea1">Example textarea</label> -->
               <textarea name="reviewText" class="form-control" id="reviewText" rows="7" placeholder="Review"></textarea>
            </div>
            <!-- hidden prof name field -->
            <div class="form-group">
               <!-- <p>{{prof.0.name}}</p> -->
               <input class="form-control" id="profName" name="profName" value="{{prof.0.name}}" type="hidden" />
            </div>

            <input type="submit" class="btn btn-primary pull-right btn btn-success" value="Submit review" /><br /><br /><br />

         </form>
